        <activity android:name=".MessageList"
        	android:launchMode="singleTop"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="MessageEdit" android:label="@string/edit_message">
        	<intent-filter android:label="@string/new_message">
        		<action android:name="android.intent.action.INSERT" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:mimeType="vnd.android.cursor.dir/vnd.info.staticfree.android.dearfutureself.message" />
        	</intent-filter>
        	<intent-filter>
        		<action android:name="android.intent.action.EDIT" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:mimeType="vnd.android.cursor.item/vnd.info.staticfree.android.dearfutureself.message" />
        	</intent-filter>
        	<intent-filter android:label="@string/app_name">
        		<action android:name="android.intent.action.SEND" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:mimeType="text/plain" />
        	</intent-filter>
        </activity>
        
        <activity android:name="MessageView" android:label="@string/message_from_your_past">
           	<intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:mimeType="vnd.android.cursor.item/vnd.info.staticfree.android.dearfutureself.message" />
        	</intent-filter>
        </activity>
        
            <activity android:name=".ImportExport" android:label="Import/Export">
                        	<intent-filter android:label="@string/new_message">
        		<action android:name="android.intent.action.SYNC" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:mimeType="vnd.android.cursor.dir/vnd.info.staticfree.android.dearfutureself.message" />
        	</intent-filter>
            </activity>
        
        <service android:name=".MessageService">
        	<intent-filter>
        		<action android:name="info.staticfree.android.dearfutureself.ACTION_SHOW_NOTIFICATION" />
        		<action android:name="info.staticfree.android.dearfutureself.ACTION_SCHEDULE_MESSAGE" />
        		<data android:mimeType="vnd.android.cursor.item/vnd.info.staticfree.android.dearfutureself.message" />
        		<data android:mimeType="vnd.android.cursor.dir/vnd.info.staticfree.android.dearfutureself.message" />
        	</intent-filter>        	
        </service>
        <receiver android:name=".BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
        	    
        	</intent-filter>
        </receiver>
        
        <provider android:authorities="info.staticfree.android.dearfutureself" android:name=".content.MessageProvider" />

    </application>
</manifest>